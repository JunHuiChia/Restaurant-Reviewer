<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_image"
        android:padding="16dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/restaurant_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_name"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/restaurant_price_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_cuisine"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_price_range"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_address"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/restaurant_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_rating"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="18sp"/>

</RelativeLayout>
