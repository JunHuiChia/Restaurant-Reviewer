<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_top_buttons"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_expand_all"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Expand All" />

        <Button
            android:id="@+id/btn_collapse_all"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Collapse All" />

    </androidx.appcompat.widget.LinearLayoutCompat>



    <Button
        android:id="@+id/btn_add_restaurant"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="+"
        android:layout_margin="15dp"
        android:background="@drawable/circle_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
    </Button>

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/section_top_buttons"/>

</RelativeLayout>
